# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 2

[*.{json, yml}]
indent_size = 2
trim_trailing_whitespace = false

[*.{js, mdx}]
indent_style = space
indent_size = 2

[*.md]
indent_size = 2
max_line_length = 0
trim_trailing_whitespace = false

# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null
